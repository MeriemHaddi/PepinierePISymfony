{% extends 'base.html.twig' %}

{% block content %}

    {{ form_start(form) }}
    {{ form_row(form._token) }}

    <div class="tab-content">
        <div class="tab-pane" id="tab-description">
            <p>1</p>
        </div>
        <div class="tab-pane active" id="tab-review">
            <form class="form-horizontal" id="form-review" name="form-review">
                <div id="review">
                </div>
                <h2>Write a review</h2>
                <div class="form-group required" style="width: 600px">
                    <div class="col-sm-12">
                        <label  class="control-label" for="input-name" >Name</label>
                        {{ form_widget(form.name,{'attr':{'class':'form-control'}} ) }}
                    </div>
                </div>
                <div class="form-group required">
                    <div class="col-sm-12" style="width: 500px">
                        <label class="control-label" for="input-review">Your Review</label>
                        {{form_widget(form.description, {'attr': {'class': "ckeditor",'placeholder': "Description",'required':"true"}})}}

                        <div class="help-block">
                        </div>
                    </div>
                </div>
                <div class="form-group required">
                </div>
                <div class="buttons clearfix">
                    <div class="pull-right">
                        <input type="submit" value="Create" />
                    </div>
                </div>
            </form>
        </div>
    </div>









    <script src="{{ asset('bundles/ckeditor/ckeditor.js') }}"></script>


{% endblock %}
