
{% extends 'base.html.twig' %}
{% block content %}

    <div id="page">
        <header></header>
        <div class="header-content-title"></div>
        <div class="container product-product" id="product-product">
            <div class="row">
                <div class="col-sm-12" id="content">
                    <!-- Product row START -->
                    <div class="row">
                        <div class="product-block">
                            <div class="col-xs-12 col-sm-6 col-md-6 product-images">
                                <!-- Product Image thumbnails START -->
                                <div class="thumbnails">
                                    <div class="product-image">
                                        <a class="thumbnail"><img alt="aliquam quaerat voluptem" data-zoom-image="" src="{{ product.productimage }}"  title="aliquam quaerat voluptem"></a>
                                    </div>
                                    <div class="additional-images-container"></div><!-- Product Image thumbnails END -->
                                </div>
                            </div>
                            <script type="text/javascript">
                                $(".additional-images").owlCarousel({
                                    items: 3,
                                    itemsDesktop: [1199,2],
                                    itemsDesktopSmall: [991,2],
                                    itemsTablet: [767,3],
                                    itemsMobile: [480,2],
                                    autoPlay: false,
                                    navigation: true,
                                    pagination: false
                                });

                                // Custom Navigation Events
                                $(".additional-next").click(function(){
                                    $(".additional-images").trigger('owl.next');
                                })
                                $(".additional-prev").click(function(){
                                    $(".additional-images").trigger('owl.prev');
                                })
                                $(".additional-images-container .customNavigation").addClass('owl-navigation');

                            </script>
                            <div class="col-xs-12 col-sm-6 col-md-6 product-details">
                                <h1 class="product-name">{{ product.productname }}</h1>
                                <table class="product-info">
                                    <tbody>
                                    <tr>
                                        <td>Category</td>
                                        <td class="product-info-value">
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Product ID:</td>
                                        <td class="product-info-value">{{ product.idproduct }}</td>
                                    </tr>

                                    </tbody>
                                </table><!-- Product Rating START -->
                                <div class="rating">
                                    <div class="product-rating">
                                        <span class="hot" style="color: red">{{ product.promotext }} </span>
                                    </div><a class="product-total-review" href="" onclick="$('a[href=\'#tab-review\']').trigger('click'); return false;"><i class="fa fa-comment"></i></a> <a class="product-write-review" href="" onclick="$('a[href=\'#tab-review\']').trigger('click'); return false;"><i class="fa fa-pencil"></i>Write a review</a>
                                </div><!-- Product Rating END -->
                                <ul class="list-unstyled product-price">
                                    <li>
                                        <h2>{{ product.price }} DT</h2>
                                    </li>
                                </ul><!-- Product Options START -->
                                <div class="product-options" id="product">
                                    <div class="form-group required">
                                        <div class="select-wrapper"></div>
                                    </div>
                                    <div class="form-group product-quantity">

                                        <input name="product_id" type="hidden" value="30">
                                        <button  class="btn  btn-primary  btn-lg btn-block">
                                            <a href="{{ path('_cupcakes_cart_add',{'id':product.idproduct } ) }}" style="color: white">Add to Cart</a>
                                        </button>



                                    </div>
                                </div><!-- Product Options END -->
                                <!-- Product Wishlist Compare START -->
                                <div class="btn-group">
                                </div><!-- Product Wishlist Compare END -->
                                <!-- AddThis Button BEGIN -->
                                <div class="addthis_toolbox addthis_default_style" data-url="https://demo.templatetrip.com/Opencart/OPC06/OPC190_nursery/OPC01/index.php?route=product/product&amp;product_id=30">
                                    <a class="addthis_button_facebook_like"></a> <a class="addthis_button_tweet"></a> <a class="addthis_button_pinterest_pinit"></a> <a class="addthis_counter addthis_pill_style"></a>

                                <script src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-515eeaf54693130e" type="text/javascript">
                                </script> <!-- AddThis Button END -->
                            </div><!-- Product option details END -->
                        </div><!-- Product nav Tabs START -->




                                </li>
                            </ul>
                            <div class="col-sm-12 product-tabs">
                                <ul class="nav nav-tabs">
                                    <li class="active"><a href="#tab-description" data-toggle="tab" aria-expanded="true">Description</a></li>
                                    <li class="li-tab-review"><a href="#tab-review" data-toggle="tab" aria-expanded="false">Reviews </a></li>
                                </ul>
                                <div class="tab-content">
                                    <div class="tab-pane active" id="tab-description">

                                        <p>{{ product.description }}</p>
                                        <ul>

                                        </ul>
                                    </div>

                                    <div class="tab-pane" id="tab-review">
                                        <form class="form-horizontal" id="form-review" method="POST">
                                            <div id="review"><table class="table table-striped table-bordered">
                                                    <tbody>
                                                    {% for a in review %}
                                                    <tr>
                                                        <td style="width: 50%;"><strong>{{ a.name }}</strong></td>
                                                        <td class="text-right">{{ a.date|date }}</td>
                                                    </tr>
                                                    <tr>
                                                        <td colspan="2"><p>{{ a.description }}</p>
                                                        </td>
                                                    </tr>
                                                    {% endfor %}
                                                    </tbody></table>
                                                <div class="text-right"></div>
                                            </div>

                                            <div id="review"></div>
                                            <h2>Write a review</h2>
                                            <div class="form-group required">
                                                <div class="col-sm-12">
                                                    <label class="control-label" for="input-review">Your Review</label>
                                                    <textarea name="text" rows="5" id="input-review" class="form-control"></textarea>
                                                    <div class="help-block"></div>
                                                </div>
                                            </div>


                                            <div class="buttons clearfix">
                                                <div class="pull-right">
                                                    <button type="submit" id="button-review" data-loading-text="Loading..." class="btn btn-primary">Continue</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div><!-- Product tab END -->
                    </div><!-- Product row END -->
                    <!-- Related products START -->
                    <div class="related-carousel products-list">
                        <div class="box-heading"></div>
                    </div><!-- Related products END -->
                </div><!-- id content END -->
            </div>
        </div>
        <script src="{{ asset  ('Bundles/catalog/view/javascript/TemplateTrip/jquery.elevatezoom.min.js')}}" type="text/javascript">
        </script>
