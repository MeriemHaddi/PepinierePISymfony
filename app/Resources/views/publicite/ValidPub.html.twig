{% extends 'baseadmin.html.twig' %}
 {% block content %}

     <html>
     <head>
         <title>Event</title>
     </head>
     <body>
     <center>
         <div class="card-body">
             <h4 class="card-title">Ads Validation</h4>

             <div class="table-responsive">
                 <table class="table table-striped table-bordered">
                     <thead>
                     <tr>
                         <th>Image</th>
                         <th>Titre</th>
                         <th>Description</th>
                         <th>Tags</th>
                         <th>Utilisateur</th>
                         <th class="td-actions"></th>
                     </tr>
                     </thead>
                     <tbody>

                     {% for publicite in publicites %}
                         <tr>
                             <td><img class="image_thumb_swap" src="{{ asset(publicite.image) }}" style="width: 80px"></td>
                             <td>{{ publicite.text }}</td>
                             <td>{{ publicite.description | raw }}</td>
                             <td>{{ publicite.tags }}</td>

                             <td class="td-actions">
                                 <a href="{{ path('validPub' , { 'idPub': publicite.idPub }) }}" >
                                     <i class="btn-icon-only icon-ok"></i>Valider
                                 </a>

                                 <a href="{{ path('refusPub' , { 'idPub': publicite.idPub }) }}" >
                                     <i class="btn-icon-only icon-remove"></i>Refuser
                                 </a>
                             </td>
                         </tr>
                     {% endfor %}
                     </tbody>
                 </table>

     </center>
     </body>
     </html>
 {% endblock %}
