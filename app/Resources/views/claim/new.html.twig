{% extends 'base.html.twig' %}

{% block content %}

    <body class="information-contact">
    <div id="page">

        <div class="header-content-title">
            <div style="background-image: url('image/catalog/demo/banners/parallax.jpg'); background-position: 50% 78.1106%;" data-source-url="../../OPC190_nursery/OPC01/image/catalog/demo/banners/parallax.jpg" class="parallex">
            </div>
        </div>
        <div id="information-contact" class="container">
            <ul class="breadcrumb">
            </ul>
            <div class="row">
                <div id="content" class="col-sm-12">
                    <h1>Claim</h1>

                    {{ form_start(form) }}
                    {{ form_row(form._token) }}

                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-name" style="font-size: 20px;">Subject</label>
                        <div class="col-sm-10">
                            {{ form_widget(form.object,{'attr':{'class':'form-control'}} ) }}
                        </div>
                    </div>
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-enquiry"style="font-size: 20px;">Description</label>
                        <div class="col-sm-10">
                            {{form_widget(form.description, {'attr': {'class': "ckeditor",'placeholder': "Description",'required':"true"}})}}
                        </div>
                    </div>

                    <div class="buttons">
                        <div class="pull-right">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </div>


                </div>
            </div>
        </div>


</div>

    </body>
    <script src="{{ asset('bundles/ckeditor/ckeditor.js') }}"></script>

{% endblock %}
