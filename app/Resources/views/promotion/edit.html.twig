{% extends 'baseadmin.html.twig' %}

{% block content %}
    <html>
    <head>
        <title>Update</title>
    </head>
    <body>
    <div class="row">
        {{ form_start(edit_form) }}


        <div class="card-body">
            <h3 class="card-title mt-2">Edit Event</h3>

            <div class="row">
                <div class="col-sm-12 col-md-6">
                    <div class="form-group">
                        <label for="inputname" class="control-label col-form-label">Event Name</label>
                        {{ form_widget(edit_form.discount,{'attr':{'class':'form-control'}} ) }}
                    </div>
                </div>
                <div class="col-sm-12 col-md-6">
                    <div class="form-group">
                        <label for="inputname" class="control-label col-form-label">Address</label>
                        {{ form_widget(edit_form.product,{'attr':{'class':'form-control'}} ) }}
                    </div>
                </div>
                <div class="col-sm-12 col-md-6">
                    <div class="form-group">
                        <label for="inputname" class="control-label col-form-label">Start Date</label>
                        {{ form_widget(edit_form.startingDate,{'attr':{'class':'form-control'}} ) }}
                    </div>
                </div>
                <div class="col-sm-12 col-md-6">
                    <div class="form-group">
                        <label for="inputname" class="control-label col-form-label">End Date</label>
                        {{ form_widget(edit_form.endingDate,{'attr':{'class':'form-control'}} ) }}
                    </div>
                </div>




            <div class="buttons">
                <div class="pull-right">
                    <input type="submit" value="Update" class="btn btn-primary" style="
    margin-left: 15px;
    margin-bottom: 8px;
">                </div>
            </div>
        </div>
            <div>
            {{ form_end(edit_form) }}
                {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-primary">
                {{ form_end(delete_form) }}
            </div>
    </div>
    </body>
    </html>
{% endblock %}


