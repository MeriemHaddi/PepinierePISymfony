{% extends 'baseadmin.html.twig' %}

{% block content %}
    {{ form_start(form) }}
    <div class="row">


        <div class="card-body">

            <h3 class="card-title mt-2">Add New Product</h3>

            <div class="row">
                <div class="col-sm-12 col-md-6">
                    <div class="form-group">
                        <label for="inputname" class="control-label col-form-label">Product Name</label>
                        {{ form_widget(form.product,{'attr':{'class':'form-control'}} ) }}
                    </div>
                </div>



                <div class="col-sm-12 col-md-6">
                    <div class="form-group">
                        <label for="inputname" class="control-label col-form-label">Start Date</label>
                        {{ form_widget(form.startingDate,{'attr':{'class':'form-control'}} ) }}
                    </div>
                </div>
                <div class="col-sm-12 col-md-6">
                    <div class="form-group">
                        <label for="inputname" class="control-label col-form-label">End Date</label>
                        {{ form_widget(form.endingDate,{'attr':{'class':'form-control'}} ) }}
                    </div>
                </div>

                <div class="col-sm-12 col-md-6">
                    <div class="form-group">
                        <label for="inputname" class="control-label col-form-label">Discount</label>
                        {{ form_widget(form.discount,{'attr':{'class':'form-control'}} ) }}
                    </div>
                </div>
            </div>
            <div class="buttons">
                <div class="pull-right">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}
