{% extends 'baseadmin.html.twig' %}

{% block content %}
<div class="table-responsive">
    <table class="table product-overview" id="zero_config">
        <thead>
        <tr>
            <th>Category ID</th>
            <th>Category Name</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td><a href="{{ path('category_show', { 'id': category.id }) }}">{{ category.id }}</a></td>
                <td>{{ category.name }}</td>
                <td>
                    <ul>
                            <button class="btn btn-info btn-rounded m-t-10 mb-2 float-right" data-target="#add-contact" data-toggle="modal" type="button" style="float:none!important;display:inline;" >                                                   <a href="{{ path('category_edit', { 'id': category.id }) }}" style="color: white">Edit</a>


                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
            <button class="btn btn-info btn-rounded m-t-10 mb-2 float-right" data-target="#add-contact" data-toggle="modal" type="button" style="float:none!important;display:inline;" >                    <a href="{{ path('category_new') }}" style="color: white">Create a new category</a>


    </ul>
{% endblock %}
