
{% extends "base.html.twig" %}
{% block stylesheets %}

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js" integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k" crossorigin="anonymous"></script>

{% endblock %}

{% block content %}
    <script src="{{ asset('bundles/ckeditor/ckeditor.js') }}"></script>
    <div class="gap gap-small"></div>


    <div class="row" >

        <div class="col-sm-offset-3 col-sm-6">
            <h>Ajout d'une publicit√©!</h>
            <div class="gap gap-small"></div>
            {{ form_start(form) }}




            <div class="form-group">
                <label for="validate-optional">Date Debut</label>
                <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
                    {{form_widget(form.datedebut, {'attr': {'class': "form-control",'placeholder': "Date Debut",'required':"true"}})}}
                </div>
            </div>
            <div class="form-group">
                <label for="validate-optional">Date Fin</label>
                <div class="input-group">
                    <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
                    {{form_widget(form.datefin, {'attr': {'class': "form-control",'placeholder': "Date Fin",'required':"true"}})}}
                </div>
            </div>


            <ul class="list-inline">
                <div class="btn"> <i class="fa fa-check-square"></i>  <input type="submit" value="Reserver" /></div>
                {{ form_end(form) }}

                <li><a href="{{ path('publicite_index') }}" class="btn btn-primary">
                        <i class="fa fa-toggle-left (alias)"></i> Retour</a>
                </li>

            </ul>
        </div>
    </div>
    </div>
    </div>
    <div class="gap gap-small"></div>

{% endblock %}