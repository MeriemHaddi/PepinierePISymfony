{% extends 'base.html.twig' %}

{% block body %}
    <h1>Reservations list</h1>

    <table>
        <thead>
            <tr>
                <th>Idres</th>
                <th>Position</th>
                <th>Datedebut</th>
                <th>Datefin</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td><a href="{{ path('reservation_show', { 'idRes': reservation.idRes }) }}">{{ reservation.idRes }}</a></td>
                <td>{{ reservation.position }}</td>
                <td>{% if reservation.datedebut %}{{ reservation.datedebut|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if reservation.datefin %}{{ reservation.datefin|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('reservation_show', { 'idRes': reservation.idRes }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('reservation_edit', { 'idRes': reservation.idRes }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('reservation_new') }}">Create a new reservation</a>
        </li>
    </ul>
{% endblock %}
