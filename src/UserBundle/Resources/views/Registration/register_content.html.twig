{% trans_default_domain 'FOSUserBundle' %}
<div class="header-content-title">

    {% form_theme form 'bootstrap_4_layout.html.twig' %}
    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}


    <p>If you already have an account with us, please login at the <a href="http://localhost/Animadvert/web/app_dev.php/login">login page</a>.</p>
    <legend>Your Personal Details</legend>
    <div class="form-group required" style="display:  none ;">
        <label class="col-sm-2 control-label">Customer Group</label>
        <div class="col-sm-10">                            <div class="radio">
                <label>
                    <input type="radio" name="customer_group_id" value="1" checked="checked" />
                    Default</label>
            </div>
        </div>
    </div>

    {{ form_widget(form) }}
    <div>

        <class="pull-right">I have read and agree to the <a href="index11ee.html?route=information/information/agree&amp;information_id=3" class="agree"><b>Privacy Policy</b></a>
        <input type="checkbox" name="agree" value="1" />
        <input type="submit" class="btn btn-primary" value="{{ 'registration.submit'|trans }}" />
    </div>
    {{ form_end(form) }}

    <legend>Newsletter</legend>
    <div class="form-group">
        <label class="col-sm-2 control-label">Subscribe</label>
        <div class="col-sm-10">               <label class="radio-inline">
                <input type="radio" name="newsletter" value="1" />
                Yes</label>
            <label class="radio-inline">
                <input type="radio" name="newsletter" value="0" checked="checked" />
                No</label>
        </div>
    </div>
    </html>
